<p id="notice"><%= notice %></p>

<h1>Home games</h1>

<table cellspacing="15">
  <thead>
    <tr>
      
      <th>Tour</th>
      <th>Match date</th>
      <th>Home team</th>
      <th>Result</th>
      <th>Away team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournament.homes.each do |home| %>
      <tr>
        
        <td><%= home.tour %></td>
        <td><%= home.match_date.strftime("%d.%m.%Y %H:%M") %></td>
        <td><%= home.home_team %></td>
        <td><%= home.result %></td>
        <td><%= home.away_team %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', tournament_path(@tournament) %>
<%= link_to 'Home page', root_path %>


